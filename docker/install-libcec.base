#!/bin/sh

if [ -d libced ]; then
    rm -rf libcec
fi

tar xf libcec-${LIBCEC_VERSION}.tar.gz
mv libcec-libcec-${LIBCEC_VERSION} libcec

mkdir libcec/build
cd libcec/build

cmake -DCMAKE_BUILD_TYPE=Release \
	-DBUILD_SHARED_LIBS=1 \
	-DCMAKE_INSTALL_PREFIX=/usr \
	${BUILD_OPTIONS} \
	..

make -j4

make install
